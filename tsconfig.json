{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@data/*": ["./src/data/*"],
      "@button/*": ["./src/components/Buttons/*"],
      "@card/*": ["./src/components/Cards/*"],
      "@form/*": ["./src/components/Forms/*"],
      "@section/*": ["./src/components/Sections/*"],
      "@accessories/*": ["./src/components/Accessories/*"],
      "@component/*": ["./src/components/*"],
      "@footer": ["./src/layouts/Footer"],
      "@header": ["./src/layouts/Header"],
      "@title": ["./src/layouts/Title"],
      "@layout/*": ["./src/layouts/*"],
      "@logo/*": ["./public/assets/icons/*"],
      "@icon/*": ["./public/assets/icons/*"],
      "@image/*": ["./public/assets/images/*"],
      "@photo/*": ["./public/assets/profile-photo/*"],

      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
